{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["Exploration", "Konzeption", "Proof of Concept"],
      "required": true,
      "default": "Exploration"
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "description": {
      "displayName": "Description",
      "type": "component",
      "repeatable": false,
      "component": "description.description",
      "required": true
    },
    "updates": {
      "displayName": "update",
      "type": "component",
      "repeatable": true,
      "component": "update.update",
      "required": true
    },
    "questions": {
      "displayName": "collaboration",
      "type": "component",
      "repeatable": true,
      "component": "collaboration.collaboration"
    },
    "surveyQuestions": {
      "displayName": "surveyQuestions",
      "type": "component",
      "repeatable": true,
      "component": "survey-questions.survey-questions"
    },
    "collaboration": {
      "type": "component",
      "repeatable": true,
      "component": "collaboration.collaboration"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::inno-user.inno-user"
    },
    "projectStart": {
      "type": "date",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "opportunities": {
      "displayName": "opportunity",
      "type": "component",
      "repeatable": true,
      "component": "opportunity.opportunity"
    },
    "team": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::inno-user.inno-user",
      "inversedBy": "projects"
    }
  }
}
